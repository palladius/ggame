<% title "Matches" %>

<table>
  <tr>
    <th>Game</th>
    <th>Title</th>
    <th>Final Score</th>
    <th>Winner</th>
    <th>Participants</th>
    <th>Progress State</th>
  </tr>
  <% for match in @matches %>
    <tr>
      <td><%=link_me match.game %></td>
      <td><%=link_me match %></td>
      <td><%=h match.final_score %></td>
      <td><%= link_to match.winner,match.winner %></td>
      <td><%= match.arr_participants.map{|u| link_to u,u }.join('; ') %></td>
      <td><%=h match.progress_state %></td>
      <td><%= link_to "Edit", edit_match_path(match) %></td>
      <td><%#= link_to "Destroy", match, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Match", new_match_path %></p>
